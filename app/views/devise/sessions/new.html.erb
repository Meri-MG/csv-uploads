<div class="max-w-md mx-auto mt-8 bg-white p-6 rounded-md shadow-md">
  <h2 class="text-2xl font-bold mb-4">Log In</h2>

  <%= form_for(resource, as: resource_name, url: session_path(resource_name)) do |f| %>
    <div class="mb-4">
      <%= f.label :email, class: 'block text-gray-600 text-sm font-medium mt-2' %><br />
      <%= f.email_field :email, autofocus: true, autocomplete: "email", class: 'w-full p-2 border rounded-md' %>
    </div>

    <div class="mb-4">
      <%= f.label :password, class: 'block text-gray-600 text-sm font-medium mt-2' %><br />
      <%= f.password_field :password, autocomplete: "current-password", class: 'w-full p-2 border rounded-md' %>
    </div>

    <% if devise_mapping.rememberable? %>
      <div class="mb-4">
        <%= f.check_box :remember_me %>
        <%= f.label :remember_me %>
      </div>
    <% end %>

    <div class="flex items-center justify-between">
      <%= f.submit "Log in", class: 'bg-indigo-500 hover:bg-blue-600 text-white font-bold py-2 px-4 rounded' %>
    </div>
  <% end %>
  <div class="mt-4 text-center">
    <%= render "devise/shared/links" %>
  </div>
</div>